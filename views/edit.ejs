<%-include("./partials/header")%>
	<div class="form-container">
		<div class="form-title edit">Edit:  "<%=blog.title%>"</div>
		<form class="form page-container" action="/blog/<%=blog._id%>?_method=PUT" method="POST">
			<label for="title">Title</label>
			<input type="text" name="title" value="<%=blog.title%>" required>
			<label for="image">Image</label>
			<input type="text" name="image" value="<%=blog.image%>">
			<label for="body">Blog Content</label>
			<textarea name="body" cols="30" rows="10" required><%=blog.body%></textarea>
			<input class="btn edit form-button" type="submit">
			<a class="btn back edit2" href="/blog">Back</a>
		</form>
		
	</div>
<%-include("./partials/footer")%>