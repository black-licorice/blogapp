<%-include("partials/header")%>
	<div class="ui main text container segment" id="newPost">
		<div class="ui huge header">New Blog</div>
		<form class="ui form" action="/blog" method="POST">
			<div class="field">
				<label for="blog[title]">Title</label>
				<input type="text" name="blog[title]" placeholder="title" required>
			</div>
			<div class="field">
				<label for="blog[image]">Image</label>
				<input type="text" name="blog[image]" placeholder="image">
			</div>
			<div class="field">
				<label for="blog[body]">Blog Content</label>
			<textarea name="blog[body]" cols="30" rows="10" required></textarea>
			</div>
			<input class="ui violet inverted button" type="submit">
		</form>
	</div>
<%-include("partials/footer")%>